<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.auto-ktuvit"
    name="AutoKtuvit" version="1.0.5" provider-name="PlexIL">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
	<import addon="service.subtitles.ktuvit" version="1.0.5"/>
    <import addon="script.module.beautifulsoup4" version="4.6.2"/>
    <import addon="script.module.requests" version="2.25.1"/>
    <import addon="script.module.pyaes" version="1.6.1"/>
    <import addon="script.module.guessit" version="3.5.0"/>
    <import addon="script.module.chardet" version="4.0.0"/>
	<import addon="script.module.web-pdb" version="1.5.6"/>
  </requires>
  <extension point="xbmc.service" library="default.py" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Auto Search for Ktuvit</summary>
    <description lang="en_GB">Auto Search for Ktuvit</description>
    <news>
      Auto search and download from Ktuvit.me.
	  It uses the settings of Ktuvit.me so make sure credentials are set!
		v1.0.5 - Fixed dependency
		v1.0.4 - Fixed Movie\TV Show detection
		v1.0.3 - Fixed settings.xml
		v1.0.2 - Better search, Added Auto-stop
    </news>
    <platform>all</platform>
    <license>GPL-2.0-only</license>
    <source>https://github.com/PlexIL/plexil.github.io</source>
    <forum></forum>
    <assets>
      <icon>resources/media/srt_logo_256x256.png</icon>
      <fanart>resources/media/srt_fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
